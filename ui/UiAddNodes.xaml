<Window x:Class="FRCA.ui.UiAddNodes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UiAddNodes" 
        Height="168"
        Width="306"
        MaxHeight="160" MaxWidth="300">
    
    <StackPanel Orientation="Vertical" Margin="0,0,0,-27">
        <StackPanel Orientation="Horizontal">
            <Label Width="122">Number of Nodes:</Label>
            <TextBox Text="100" Name="txt_nodes_number" Width="152"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="122">r:</Label>
            <TextBox Text="40" Name="txt_range" Width="152"></TextBox>
        </StackPanel>
        
        <Button Click="Button_Click" Margin="0,0,183,0">OK</Button>
        <StackPanel Orientation="Horizontal" Height="23" Margin="0,0,16,0">
            <Label Width="122">Add More Node</Label>
            <TextBox Text="20" Name="add_more_node" Width="154"></TextBox>
        </StackPanel>
        <Button Click="new_node_click" Margin="0,0,183,0">Add</Button>
    </StackPanel>
    
</Window>
